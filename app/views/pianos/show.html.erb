<%= render template: "/partials/_admin_nav.html.erb" %> |

<a href="/pianos/<%= @piano.id %>/photos/new">add photo</a>

<p id="notice"><%= notice %></p>
<div class="piano-show-container">
  <img src='<%= @piano.photo %>' alt='<%= @piano.id %>'  width="50%" />
  <span>Model: <%= @piano.model %></span>
  <span>Make: <%= @piano.make %></span>
  <span>Price: <%= @piano.price %></span>
  <p>Description: <%= @piano.description %></span>

    <ul class="admin-photos">
      <% @piano.detail_photos.each do |photo| %>
        <li>
          <img src='<%= photo.image.url %>' alt='<%= photo.id %>'  />
          <form method="post" action="/pianos/<%= @piano.id %>/photos/<%= photo.id %>">
            <input type="hidden" name="_method" value="delete">
            <button class="button" type="submit">Delete</button>
          </form>
        </li>
      <% end %>
    <ul>

</div>

